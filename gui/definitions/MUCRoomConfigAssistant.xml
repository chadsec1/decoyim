<interface>
  <object class="GtkAssistant" id="room-config-assistant">
    <property name="width_request">400</property>
    <property name="title" translatable="yes">Room configuration</property>
    <property name="modal">True</property>
    <property name="window_position">center-on-parent</property>
    <property name="default_width">600</property>
    <property name="default_height">500</property>
    <property name="destroy_with_parent">True</property>
    <property name="use_header_bar">1</property>
    <signal name="cancel" handler="on_cancel" swapped="no"/>
    <signal name="prepare" handler="on_page_changed" swapped="no"/>
    <signal name="apply" handler="on_apply" swapped="no"/>
    <style>
      <class name="decoyim"/>
    </style>
  </object>
</interface>
